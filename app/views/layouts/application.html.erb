<!DOCTYPE html>
<html>
<head>
  <title>Grouppet</title>
  <%= stylesheet_link_tag 'formtastic', 'syntax', 'application' %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
  <link href='http://fonts.googleapis.com/css?family=Amaranth' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans+Mono' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class='page_left'>
    <div class='content'>
      <h1>Grouppet</h1>
      <div class='logo'></div>
      <% flash.each do |key, value| -%>
       <div id='flash' class="flash <%= key %>"><%= value %></div>
      <% end -%>
      <div class="login">
        <% if current_user %>
          <div class='avatar'>
            <%#= gravatar_url_for current_user.email %>
          </div>
          <%= link_to 'Logout', sign_out_path %>
        <% else %>
          <%= link_to 'Login', sign_in_path %> | <%= link_to 'Sign-Up', sign_up_path %>
        <% end -%>
      </div>
      <div class='menu'>
        <ul class="list">
          <li><%= link_to 'Timeline', public_snippets_path %></li>
          <% if current_user %>
            <li><%= link_to 'Private timeline', private_snippets_path %></li>
          <% end -%>
          <li><%= link_to 'About us', about_path %></li>
          <li><%= link_to 'Contact us', contact_path %></li>
        </ul>
      </div>
    </div>
    <div class='footer'></div>
  </div>
  <div class='page_right'>
    <div class='content'>
      <%= yield %>
    </div>
  </div>
  <div class='footer'></div>
  <% if Rails.env.development? %>
    <div class="footer_params"><%= params.inspect %></div>
    <div class="footer_session"><%= session.inspect %></div>
  <% end %>
</body>
</html>
